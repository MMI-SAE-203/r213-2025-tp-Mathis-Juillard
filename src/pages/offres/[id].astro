---
import { getOffre } from '../../backend.mjs';
import Base from '../../layouts/Base.astro';

const { id } = Astro.params;
const offre = await getOffre(id);

if (!offre) {
    return Astro.redirect('/offres');
}
---

<Base>
  <div class="bg-gray-100 min-h-screen flex items-center justify-center py-10">
    <div class="bg-white shadow-lg rounded-lg p-6 max-w-lg w-full">
      
      <h1 class="text-2xl font-bold text-gray-800 mb-4">
        Détails de l'Offre
      </h1>

      <ul class="space-y-3 text-gray-700">
        <li><strong class="font-semibold">🏡 Nom de la maison :</strong> {offre.nom_maison}</li>
        <li><strong class="font-semibold">📍 Adresse :</strong> {offre.Adresse}</li>
        <li><strong class="font-semibold">💰 Prix :</strong> <span class="text-indigo-600 font-bold">{offre.Prix} €</span></li>
        <li><strong class="font-semibold">📏 Superficie :</strong> {offre.superficie} m²</li>
        <li><strong class="font-semibold">🛏 Nombre de chambres :</strong> {offre.Nombre_chambre}</li>
        <li><strong class="font-semibold">🛁 Nombre de salles de bain :</strong> {offre.Nombre_sdb}</li>
      </ul>

      <div class="mt-6">
        <a href="/offres" class="block text-center bg-indigo-600 text-white py-2 rounded-md hover:bg-indigo-700 transition">
          Retour aux offres
        </a>
      </div>

    </div>
  </div>
</Base>
